        @section Scripts{
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            <script>
                window.onload = function () {
                    $.ajax({
                        url: "../../api/HoaDonAPI/GetHoaDonModel",
                        type: "GET",
                        contentType: "Application/json;charset-utf-8",
                    }).done(function (reponse) {
                        console.log(reponse);
                        var newHtml = "";
                        $.each(reponse, function (index, hoaDon) {
                            newHtml += '<tr><td>' + hoaDon.user_ID + '</td>';
                            newHtml += '<td>' + hoaDon.hoTen + '</td>';
                            newHtml += '<td>' + hoaDon.sdt + '</td>';
                            newHtml += '<td>' + hoaDon.thanhTien + '</td>';
                            newHtml += '<td>' + hoaDon.trangThai + '</td>';
                            newHtml += '<td>' + '<button type="button" id="edit_hoadon" data-idhoadon="' + hoaDon.id + '" class="btn btn-primary" data-toggle="modal" data-target="#EditModal">Edit</button>';
                            newHtml += '<button type="button" id="btn_delete_hoadon" data-idhoadon="' + hoaDon.id + '" class="btn btn-danger">Delete</button>' + '</td></tr>';
                        });
                        $("#dshoadon").html(newHtml);
                    }).fail(function () {
                        alert('Thất bại !');
                    });


                }
                function addHoaDon() {
                    var insert = {};
                    insert.User_ID = parseInt($("#userid").val());

                    insert.HoTen = $("#hoten").val();

                    insert.Sdt = $("#sdt").val();

                    insert.ThanhTien = parseInt($("#thanhtien").val());

                    insert.TrangThai = $("#trangthai").val();

                    $.ajax({
                        url: "../../api/HoaDonAPI/PostHoaDonModel",
                        type: "POST",
                        contentType: "Application/json;charset-utf-8",
                        data: JSON.stringify(insert),
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#AddModal").modal('hide');
                        $("#successModal").modal('show');

                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                function getHoaDon(id) {
                    $.ajax({
                        url: "../../api/HoaDonAPI/GetHoaDonModel/" + id,
                        type: "GET",
                        contentType: "Application/json;charset-utf-8",
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#edit_id").val(reponse.id);
                        $("#edit_userid").val(reponse.user_ID);
                        $("#edit_hoten").val(reponse.hoTen);
                        $("#edit_sdt").val(reponse.sdt);
                        $("#edit_thanhtien").val(reponse.thanhTien);
                        $("#edit_trangthai").val(reponse.trangThai);
                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                function updateHoaDon(id) {
                    var update = {}
                    update.ID = parseInt(id);
                    update.User_ID = parseInt($("#edit_userid").val());

                    update.HoTen = $("#edit_hoten").val();

                    update.Sdt = $("#edit_sdt").val();

                    update.ThanhTien = parseInt($("#edit_thanhtien").val());

                    update.TrangThai = $("#edit_trangthai").val();
                    $.ajax({
                        url: "../../api/HoaDonAPI/PutHoaDonModel/" + id,
                        type: "PUT",
                        contentType: "Application/json;charset-utf-8",
                        data: JSON.stringify(update),
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#EditModal").modal('hide');
                        $("#updateModal").modal('show');

                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                function deleteHoaDon(id) {

                    $.ajax({
                        url: "../../api/HoaDonAPI/DeleteHoaDonModel/" + id,
                        type: "DELETE",
                        contentType: "Application/json;charset-utf-8",
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#deleteModal").modal('show');

                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                $(document).ready(function () {
                    $('button[name=btn_create_hoadon]').click(function (e) {
                        addHoaDon();
                        e.preventDefault();
                    });
                    $('body').on('click', '#edit_hoadon', function () {
                        var id = $(this).data("idhoadon");
                        getHoaDon(id);
                        e.preventDefault();
                    });
                    $('body').on('click', '#btn_update_hoadon', function () {
                        var id = $("#edit_id").val();
                        updateHoaDon(id);
                        e.preventDefault();
                    });
                    $('body').on('click', '#btn_delete_hoadon', function () {
                        var id = $(this).data("idhoadon");
                        deleteHoaDon(id);
                        e.preventDefault();
                    });
                    $('button[name=btn_ok]').click(function (e) {
                        location.reload();
                    });
                });

            </script>
        }

