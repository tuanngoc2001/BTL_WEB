@model Web_Data.User

@{ ViewData["Title"] = "pages Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="banner1">
    <div class="container">
        <h3><a href="~/user/pages/index">Home</a> / <span>ForgotPassword</span></h3>
    </div>
</div>
<!--banner-->
<!--content-->
<div class="content">
    <!--login-->
    <div class="login">
        <div class="main-agileits">
            <div class="form-w3agile form1">
                <h3>ForgotPassword</h3>
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="key">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input type="password" name="Password" asp-for="Password" placeholder="CurrentPassword">
                        <div class="clearfix"></div>
                    </div>
                    <div class="key">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input type="password" name="NewPassword" asp-for="Password" placeholder="NewPassword">
                        <div class="clearfix"></div>
                    </div>
                    <div class="key">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input type="password" name="NewPasswordConfirm" asp-for="Password" placeholder="NewPasswordConfirm">
                        <div class="clearfix"></div>
                    </div>                    
                    <br>
                    <input type="submit" value="Submit">
                </form>
            </div>
        </div>
    </div>
    <!--login-->
</div>
<!--content-->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}