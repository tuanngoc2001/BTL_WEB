                        <input id="edit_loai" asp-for="Loai" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.Loai)</span>
                    </div>                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" id="btn_update_user" class="btn btn-primary">Cập Nhật</button>
