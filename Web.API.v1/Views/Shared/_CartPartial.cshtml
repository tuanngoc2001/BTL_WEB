@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor


@{ var session = HttpContextAccessor.HttpContext.Session;
    string jsoncart = session.GetString(Web_API_v1.Controllers.PagesController.CARTKEY);
    if (jsoncart != null)
    {
        var cart = JsonConvert.DeserializeObject<List<ItemModel>>(jsoncart);
        <div class="nav-item"><a asp-route="cart">Giỏ hàng(@cart.Count)</a></div> } }