@{
}

@model List<Web_API_v1.Models.ItemModel>

<h2><center>CART</center></h2>

@if (Model.Count > 0)
{
    decimal total = 0;
    int stt = 1;

    <table class="table">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th></th>
        </tr>
        @foreach (var cartitem in Model)
        {
            var thanhtien = cartitem.Quantity * cartitem.SanPham.Gia;
            total += thanhtien;

            <tr>
                <td>@(stt++)</td>
                <td>@cartitem.SanPham.TenSP</td>
                <td> <img src="~/Assets/images/@cartitem.SanPham.Image" style="height:200px" class="img-responsive" alt=""></td>
                <td>@(cartitem.SanPham.Gia.ToString("n0"))</td>
                <td><input asp-for="@cartitem.Quantity" id="@($"quantity-{cartitem.SanPham.ID}")" /></td>
                <td>@(thanhtien.ToString("n0"))</td>
                <td>
                    <button class="btn btn-success updatecartitem"
                            data-productid="@cartitem.SanPham.ID">
                        Update
                    </button>
                    <a asp-route="removecart" asp-route-productid="@cartitem.SanPham.ID"
                       class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </table>

    <a asp-controller="Pages" asp-action="Checkout" class="btn btn-success">Checkout</a>

    @section Scripts {
        <script>
          $(document).ready(function () {
              $(".updatecartitem").click(function (event) {
                  event.preventDefault();
                  var productid = $(this).attr("data-productid");
                  var quantity = $("#quantity-" + productid).val();
                  $.ajax({
                      type: "POST",
                      url:"@Url.RouteUrl("updatecart")",
                      data: {
                          productid: productid,
                          quantity:quantity
                      },
                      success: function (result) {
                          window.location.href = "@Url.RouteUrl("cart")";
                      }
                  });
              });
          });
        </script>
    }

}
else
{
    <p class="alert alert-danger">
        Your cart is empty
    </p>
}